{
  "name": "@narramorph/conversion-tools",
  "version": "1.0.0",
  "description": "Markdown to JSON conversion pipeline for Narramorph content",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "fix": "tsx fix-content-universal.ts",
    "fix:l1": "tsx fix-content-universal.ts --layer=L1",
    "fix:l2": "tsx fix-content-universal.ts --layer=L2",
    "fix:l3": "tsx fix-content-universal.ts --layer=L3",
    "fix:l4": "tsx fix-content-universal.ts --layer=L4",
    "fix:dry": "tsx fix-content-universal.ts --dry-run",
    "convert": "tsx convert-md-to-json.ts",
    "convert:l1": "tsx convert-md-to-json.ts --layer=1",
    "convert:l2": "tsx convert-md-to-json.ts --layer=2",
    "convert:l3": "tsx convert-md-to-json.ts --layer=3",
    "convert:l4": "tsx convert-md-to-json.ts --layer=4",
    "convert:all": "tsx convert-md-to-json.ts --layer=all --strict",
    "convert:watch": "tsx convert-md-to-json.ts --watch",
    "aggregate": "tsx aggregate-l3-l4.ts",
    "matrix": "tsx generate-selection-matrix.ts --strict",
    "matrix:enhanced": "tsx generate-selection-matrix-enhanced.ts",
    "matrix:l1": "tsx generate-selection-matrix-enhanced.ts --layers=L1 --non-strict",
    "matrix:l2": "tsx generate-selection-matrix-enhanced.ts --layers=L1,L2 --non-strict",
    "matrix:l3": "tsx generate-selection-matrix-enhanced.ts --layers=L1,L2,L3 --non-strict",
    "matrix:full": "tsx generate-selection-matrix-enhanced.ts --layers=L1,L2,L3,L4 --strict",
    "matrix:report": "cat reports/matrix-coverage-report.json | jq .",
    "validate": "tsx validate-content.ts --strict",
    "diff": "tsx diff-content.ts",
    "rollback": "tsx rollback.ts",
    "type-check": "tsc --noEmit",
    "repair:l2l3": "tsx repair-l2-l3-source.ts"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
